@{
    int numberOfUsers = 0;
    int numberOfCustomer = 0;
    int numberOfServices = 0;
    int numberOfDanhMucs = 0;
    int numberOfBarbers = 0;
    int numberOfViTris = 0;
    int numberOfChiNhanhs = 0;
    int numberOfAppointments = 0;
}

<div class="page-inner">
    <!-- Card -->
    <h4 class="page-title">Trang Quản Trị</h4>
    <div class="row">
        <div class="col-sm-6 col-md-3" onclick="window.location.href = '/Admin/AccountAdmin/Index';">
            <div class="card card-stats card-primary card-round">
                <div class="card-body">
                    <div class="row">
                        <div class="col-5">
                            <div class="icon-big text-center">
                                <i class="flaticon-users"></i>
                            </div>
                        </div>
                        <div class="col-7 col-stats">
                            <div class="numbers">
                                <p class="card-category">Tài Khoản</p>
                                <h4 class="card-title">@ViewBag.NumberOfUsers</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3" onclick="window.location.href = '/Admin/CustomerAdmin/Index';">
            <div class="card card-stats card-danger card-round">
                <div class="card-body ">
                    <div class="row">
                        <div class="col-5">
                            <div class="icon-big text-center">
                                <i class="flaticon-user"></i>
                            </div>
                        </div>
                        <div class="col-7 col-stats">
                            <div class="numbers">
                                <p class="card-category">Khách Hàng</p>
                                <h4 class="card-title">@ViewBag.NumberOfCustomer</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3" onclick="window.location.href = '/Admin/BarberAdmin/Index';">
            <div class="card card-stats card-primary card-round">
                <div class="card-body ">
                    <div class="row">
                        <div class="col-5">
                            <div class="icon-big text-center">
                                <i class="flaticon-user"></i>
                            </div>
                        </div>
                        <div class="col-7 col-stats">
                            <div class="numbers">
                                <p class="card-category">Thợ Cắt Tóc</p>
                                <h4 class="card-title">@ViewBag.NumberOfBarbers</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3" onclick="window.location.href = '/Admin/DanhMucAdmin/Index';">
            <div class="card card-stats card-success card-round">
                <div class="card-body ">
                    <div class="row">
                        <div class="col-5">
                            <div class="icon-big text-center">
                                <i class="flaticon-analytics"></i>
                            </div>
                        </div>
                        <div class="col-7 col-stats">
                            <div class="numbers">
                                <p class="card-category">Danh Mục Dịch Vụ</p>
                                <h4 class="card-title">@ViewBag.NumberOfDanhMucs</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3" onclick="window.location.href = '/Admin/DichVuAdmin/Index';">
            <div class="card card-stats card-stats card-round">
                <div class="card-body ">
                    <div class="row">
                        <div class="col-5">
                            <div class="icon-big text-center">
                                <i class="fas fa-ruler"></i>
                            </div>
                        </div>
                        <div class="col-7 col-stats">
                            <div class="numbers">
                                <p class="card-category">Dịch Vụ</p>
                                <h4 class="card-title">@ViewBag.NumberOfServices</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-sm-6 col-md-3" onclick="window.location.href = '/Admin/KhuVucAdmin/Index';">
            <div class="card card-stats card-primary card-round">
                <div class="card-body ">
                    <div class="row">
                        <div class="col-5">
                            <div class="icon-big text-center">
                                <i class="fas fa-couch"></i>
                            </div>
                        </div>
                        <div class="col-7 col-stats">
                            <div class="numbers">
                                <p class="card-category">Khu Vực</p>
                                <h4 class="card-title">@ViewBag.NumberOfViTris</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3" onclick="window.location.href = '/Admin/ChiNhanhAdmin/Index';">
            <div class="card card-stats card-success card-round">
                <div class="card-body ">
                    <div class="row">
                        <div class="col-5">
                            <div class="icon-big text-center">
                                <i class="flaticon-user-2"></i>
                            </div>
                        </div>
                        <div class="col-7 col-stats">
                            <div class="numbers">
                                <p class="card-category">Chi Nhánh</p>
                                <h4 class="card-title">@ViewBag.NumberOfChiNhanhs</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3" onclick="window.location.href = '/Admin/BookingAdmin/Index';">
            <div class="card card-stats card-secondary card-round">
                <div class="card-body ">
                    <div class="row">
                        <div class="col-5">
                            <div class="icon-big text-center">
                                <i class="flaticon-success"></i>
                            </div>
                        </div>
                        <div class="col-7 col-stats">
                            <div class="numbers">
                                <p class="card-category">Lịch Hẹn</p>
                                <h4 class="card-title">@ViewBag.NumberOfAppointments</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Card With Icon States Color -->
</div>
